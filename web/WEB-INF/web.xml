<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SvCliente</servlet-name>
        <servlet-class>Controlador.SvCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Productos</servlet-name>
        <servlet-class>Controlador.SvProductos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SvProducto</servlet-name>
        <servlet-class>SvProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SvProducto2</servlet-name>
        <servlet-class>Controlador.SvProducto2</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SvComprar</servlet-name>
        <servlet-class>Controlador.SvComprar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SvVender</servlet-name>
        <servlet-class>Controlador.SvVender</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SvCliente</servlet-name>
        <url-pattern>/SvCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Productos</servlet-name>
        <url-pattern>/Productos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SvProducto</servlet-name>
        <url-pattern>/SvProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SvProducto2</servlet-name>
        <url-pattern>/SvProducto2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SvComprar</servlet-name>
        <url-pattern>/SvComprar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SvVender</servlet-name>
        <url-pattern>/SvVender</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
